{
    "extends": "./jsconfig.json",
    "compilerOptions": {
      "target": "ESNext", // or ES6, depending on your needs
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }